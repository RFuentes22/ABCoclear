<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#C9D8E3"
              android:gravity="right|center">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/owl"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="right|center"
            >
        <LinearLayout
                android:id="@+id/add_patient"
                android:layout_width="2in"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="@dimen/small_size"
                android:elevation="10dp"
                android:background="@drawable/myrect"
                android:layout_margin="5dp"
                >

            <ImageButton
                    android:layout_gravity="center"
                    android:layout_width="0.3in"
                    android:layout_height="0.3in"
                    android:background="@drawable/ic_add_patient_home"
                    android:layout_margin="@dimen/medium_size"
                    tools:ignore="Suspicious0dp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agregar Paciente"
                    android:textSize="@dimen/high_size"
                    android:fontFamily="@font/alphabet_fridge_magnets"
                    android:textColor="@color/black"
                    android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/list_patients"
                android:layout_width="2in"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="@dimen/small_size"
                android:elevation="10dp"
                android:background="@drawable/myrect"
                android:layout_margin="5dp"
                >
            <ImageButton
                    android:layout_gravity="center"
                    android:layout_width="0.3in"
                    android:layout_height="0.3in"
                    android:layout_margin="@dimen/medium_size"
                    android:background="@drawable/ic_list_patient_home"

                    tools:ignore="Suspicious0dp" />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lista Pacientes"
                    android:textSize="22dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/alphabet_fridge_magnets"
                    android:layout_gravity="center"
                    />


        </LinearLayout>

        <LinearLayout
                android:id="@+id/logout"
                android:layout_width="2in"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="@dimen/small_size"
                android:elevation="10dp"
                android:background="@drawable/myrect"
                android:layout_margin="5dp"
                >
            <ImageButton
                    android:layout_gravity="center"
                    android:layout_width="0.3in"
                    android:layout_height="0.3in"
                    android:background="@drawable/ic_logout_home"
                    tools:ignore="Suspicious0dp"
                    android:layout_margin="@dimen/medium_size"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cerrar Sesion"
                    android:textSize="@dimen/high_size"
                    android:textColor="@color/black"
                    android:fontFamily="@font/alphabet_fridge_magnets"
                    android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>